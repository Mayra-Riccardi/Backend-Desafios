doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <!-- CSS only -->
        title Desafio 5 - PUG
    body 
        main 
            h1 Productos
            if mostrarProductos
                div 
                    table
                        tr 
                            th Nombre 
                            th Precio 
                            th Imagen  
                        each product in products
                            tr 
                                td=`${product .title}` 
                                td=`${product.price}` 
                                td 
                                    img(width="50" src=`${product.thumbnail}`, alt=`${product.id}`) 
                button(class='btnVolver')
                    a(href="/") Volver 
            else
                h3 No tiene productos cargados.
                    div(class='backProct')
                        a(href="/") Volver 
